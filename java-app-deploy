apiVersion: apps/v1
kind: Deployment
metadata:
  name: java-deployment           # Use a descriptive name for the Deployment
  labels:
    app: backend
spec:
  replicas: 2                      # Number of pod replicas
  selector:
    matchLabels:
      app: backend                 # Matches pods with the "app: backend" label
  template:
    metadata:
      labels:
        app: backend
    spec:
      containers:
      - name: java-app
        image: ragavmuthukumar/javaspringboot  # Java Spring Boot Docker image
        ports:
        - containerPort: 8080                 # Match the Spring Boot server port
